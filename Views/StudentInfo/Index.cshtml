@model IEnumerable<StudentStorage.Models.Student>
<div class="mb-3">
    <a class="btn btn-primary float-end" asp-controller="StudentInfo" asp-action="AddorEditStudent" asp-route-id="0">Add New Student</a>
</div>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Roll Number</th>
            <th>Class Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th colspan="2">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.rollNumber</td>
                <td>@item.className</td>
                <td>@item.email</td>
                <td>@item.phone</td>
                <td><a class="btn btn-success" asp-action="AddorEditStudent" asp-route-id="@item.Id">Edit</a></td>
                <td><a class="btn btn-danger" asp-action="RemoveStudent" asp-route-id="@item.Id">Delete</a></td>
            </tr>
        }
    </tbody>
</table>
